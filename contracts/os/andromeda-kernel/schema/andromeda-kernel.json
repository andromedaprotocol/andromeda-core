          }
        },
        "additionalProperties": false
      },
      {
        "type": "object",
        "required": [
          "recoveries"
        ],
        "properties": {
          "recoveries": {
            "type": "object",
            "required": [
              "addr"
            ],
            "properties": {
              "addr": {
                "$ref": "#/definitions/Addr"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
